<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#ff8c00" android:startColor="#ff8c00" />

            <corners android:radius="4dp" />
        </shape></item>
    <!-- focus -->
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#ffc2b7" android:startColor="#ffc2b7" />

            <corners android:radius="4dp" />
        </shape></item>
        
    <item>        
        <shape>
            <gradient
                android:startColor="#B1D3EC"
                android:endColor="#B1D3EC"
                android:angle="270" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>